{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "outDir": "dist", // 指定编译输出目录
    "rootDir": "src", // 指定源码根目录
    "paths": {
      "@hawk-tracker/*": ["packages/*/src"]
    }
  },
  "include": ["src/**/*"], // 指定需要编译的文件
  "exclude": ["node_modules", "dist"],
  "references": [{ "path": "../core" }]
}
