// 注释这个文档，并修改为中文
{
  "extends": "@workspace/typescript-config/base.json",  // 继承基础配置
  "compilerOptions": {
    "target": "ES2018",  // 目标 ES 版本
    "allowSyntheticDefaultImports": true,  // 允许合成默认导入
    "allowJs": true,  // 允许 JS 文件
    "noImplicitAny": true,  // 不允许隐式 any
    "strictNullChecks": true,
    "strictFunctionTypes": true,  // 严格函数类型
    "noImplicitReturns": true,  // 不允许隐式返回
    "noFallthroughCasesInSwitch": true,  // 不允许 switch 语句的 case 语句穿透
    "noUncheckedIndexedAccess": false,  // 不允许索引访问的隐式 any
    "noImplicitOverride": true,  // 不允许隐式重写
    "exactOptionalPropertyTypes": false,  // 不允许可选属性的隐式 any
    "sourceMap": true,  // 生成 sourceMap
    "composite": true,  // 启用复合项目
    "declarationDir": "dist", // 指定 .d.ts 文件的输出目录
    "outDir": "dist", // 指定编译输出目录
    "rootDir": "src", // 指定源码根目录
    "baseUrl": ".",
    "paths": {
      "@hawk-tracker/core/*": ["src/*"]
    }
  },
  "include": ["src/**/*"], // 指定需要编译的文件
  "exclude": ["node_modules", "dist", "**/*.test.ts", "**/*.spec.ts"]
}
