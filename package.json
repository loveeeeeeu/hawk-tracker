{
  "name": "@hawk-tracker/monorepo",
  "version": "1.0.0",
  "description": "",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "build:clean": "turbo run clean && turbo run build",
    "build:packages": "turbo run build --filter='./packages/*'",
    "build:apps": "turbo run build --filter='./apps/*'",
    "build:staged": "pnpm build:packages && pnpm build:apps",
    "dev": "turbo run dev",
    "dev:web": "turbo run dev:web",
    "dev:server": "turbo run dev:server",
    "dev:with-sdk": "pnpm -r --parallel --filter @hawk-tracker/core --filter @hawk-tracker/plugin-error run dev & pnpm run dev:web",
    "dev:all": "pnpm -r --parallel --filter @hawk-tracker/core --filter @hawk-tracker/plugin-error run dev & pnpm run dev:web & pnpm run dev:server",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "format": "prettier --write \"**/*.{ts,js,json,md}\"",
    "test": "turbo run test",
    "clean": "turbo run clean",
    "build-and-fix": "turbo run lint:fix && turbo run build",
    "prepare": "node .husky/install.mjs",
    "version-packages": "changeset version",
    "release": "pnpm build-and-fix && pnpm version-packages && pnpm publish -r --no-git-checks",
    "commit": "cz"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.12.1",
  "devDependencies": {
    "@changesets/cli": "^2.29.5",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@workspace/build-config": "workspace:*",
    "@workspace/eslint-config": "workspace:*",
    "@workspace/typescript-config": "workspace:*",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.5",
    "prettier": "^3.6.2",
    "rollup": "^4.46.2",
    "turbo": "^2.5.5",
    "typescript": "^5.9.2"
  },
  "lint-staged": {
    "packages/**/*.{js,ts}": [
      "eslint --fix",
      "tsc --noEmit",
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=20"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
